<script >
  function addToCart(productId) {
    toastr.options = {
      "closeButton": true,
      "newestOnTop": false,
      "progressBar": true,
      "positionClass": "toast-bottom-center",
      "preventDuplicates": false,
      "onclick": null,
      "showDuration": "300",
      "hideDuration": "1000",
      "timeOut": "5000",
      "extendedTimeOut": "1000",
      "showEasing": "swing",
      "hideEasing": "linear",
      "showMethod": "fadeIn",
      "hideMethod": "fadeOut"
    }
    $.ajax({
      url: `/add-to-cart/${productId}`,
      method: "get",
      success: function(data) {
        toastr.success('Successfully added to the Cart')

      },
      error: function(err) {
        console.log(err);
      }
    })
  }

  </script>